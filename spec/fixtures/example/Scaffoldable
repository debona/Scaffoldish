require 'ostruct'
# require 'byebug'; byebug

project_root = File.dirname(__FILE__)
templates_root = File.join(project_root, 'templates')

scaffold :test do |*words|
  words = words.join(', ')

  data = OpenStruct.new()
  data.words = words

  generate('test.txt.erb', 'test.txt', data)
  chunk('test.txt.erb', 'test.txt', data)
end
